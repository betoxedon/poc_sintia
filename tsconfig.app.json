{
   "extends": "@vue/tsconfig/tsconfig.dom.json",
   "include": ["global.d.ts", "env.d.ts", "src/**/*", "src/**/*.vue"],
   "exclude": ["src/**/__tests__/*"],
   "compilerOptions": {
      "baseUrl": ".",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "paths": {
         "@/*": ["./src/*"]
      },
      "verbatimModuleSyntax": false
   }
}
